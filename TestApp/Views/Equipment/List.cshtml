@{
    Layout = "_Layout";
}

@model IEnumerable<TestApp.Models.EquipmentItemModel>

<ul>
    <table class="table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Details</th>
        </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td> @item.Name </td>
                <td> @item.Type.ToString() </td>
                <td> (@Html.ActionLink("Details", "Details", "Equipment", new {id = @item.Id}, null)) </td>
            </tr>
        }
    </table>
</ul>