@{
    Layout = "_Layout";
}

@model TestApp.Models.EquipmentItemModel

@using (Html.BeginForm("Order", "Cart", new {id=Model.Id}, FormMethod.Post, true, null))
{
    <p>Equipment Item: @Model.Name</p>
    <p>Equipment Type: @Model.Type.ToString()</p>
    <label for="numberOfDays">Number of days:</label>
    <input type="number" id="numberOfDays" name="numberOfDays" step="1" min="1">
    <input type="submit" value="Order" />
}